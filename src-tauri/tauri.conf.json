{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Neatify",
  "version": "3.0.6",
  "identifier": "com.neatify.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Neatify",
        "width": 900,
        "height": 605,
        "center": true,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "devtools": false
      }
    ],
    "security": {
      "capabilities": ["default", "http-access", "updater"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://raw.githubusercontent.com/Deepanshu0211/Neatify/main/docs/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ1NEYzNUNFOUY0NjFCRkEKUldUNkcwYWZ6alZQUlVvZ3V1Q0ZMQU5ibkVoVUVOZlNvNkhjNStnQkJJcGFxcmxLWVR4VHYwNTQK",
       "allow": {
      "check": true,
      "download": true,
      "install": true
    }
    }
  }
}
